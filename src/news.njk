---
layout: base.njk
title: News
pagination:
  data: collections.news
  size: 1000
permalink: "news/"
---

<h2 class="text-2xl font-bold mb-4">News</h2>

{% if collections.news.length %}
  <div class="space-y-4">
    {% for post in collections.news | reverse %}
      <article class="bg-white shadow rounded-lg p-4">
        <h3 class="text-xl font-semibold mb-1">
          <a href="{{ post.url }}" class="hover:text-blue-600">
            {{ post.data.title }}
          </a>
        </h3>
        <p class="text-xs text-gray-500 mb-2">
          {{ post.date | date("dd LLLL yyyy") }}
        </p>
        <p class="text-gray-700">
          {{ post.data.summary }}
        </p>
      </article>
    {% endfor %}
  </div>
{% else %}
  <p class="text-gray-600">No news yet.</p>
{% endif %}
