<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title or "My Website" }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Tailwind-built CSS -->
    <link rel="stylesheet" href="/assets/styles.css">
  </head>
  <body class="min-h-screen bg-gray-100 text-gray-900">
    <header class="bg-white shadow mb-8">
      <div class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-xl font-semibold">
          <a href="/" class="hover:text-blue-600">My Website</a>
        </h1>
        <nav class="space-x-4 text-sm">
          <a href="/" class="hover:text-blue-600">Home</a>
          <a href="/news/" class="hover:text-blue-600">News</a>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 pb-16">
      {{ content | safe }}
    </main>

    <footer class="border-t mt-8 text-center py-4 text-sm text-gray-500">
      &copy; {{ "now" | date("yyyy") }} My Website
    </footer>
  </body>
</html>